#!/usr/bin/env groovy

node('') {
    def gVar="GlobalVar-1"
    	
	stage('Stage-1')
	{
    echo gVar
    sh '''
        echo ${gVar}
	pwd
	export gVarEx=''' + gVar + '''
	./1.sh
	echo ${gVarEx}
        echo ${gVar}
		    '''
	}
		
	stage('Stage-2')
	{
    echo gVar
    echo gVarEx
		sh '''
        echo ${gVar}
		    ./2.sh
		    echo ${gVarEx}
		    '''
		echo gVar
	}
}
