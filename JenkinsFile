#!/usr/bin/env groovy

node('') {
    def gVar="GlobalVar-1"

	stage('Clean Environment') {
            deleteDir()
        }
        
        stage('Checkout'){
			checkout scm
		}
	
	stage('Stage-1')
	{
    echo gVar
    sh '''
    	pwd;ls -lrt
	chmod 777 1.sh 2.sh
        echo ${gVar}
	pwd
	export gVarEx=''' + gVar + '''
	./1.sh
	echo ${gVarEx}
        echo ${gVar}
	echo ${one}
		    '''
	}
		
	stage('Stage-2')
	{
    echo gVar
		sh '''
		echo ${one}
        echo ${gVar}
		    ./2.sh
		    '''
		echo gVar
	}
}
